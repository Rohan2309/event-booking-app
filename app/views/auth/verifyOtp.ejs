<!DOCTYPE html>
<html lang="en">
<head>
  <title>Verify OTP – EventBook</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: #eef1f7;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .verify-card {
      width: 420px;
      background: #ffffff;
      padding: 35px 30px;
      border-radius: 14px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.12);
      animation: fadeIn 0.4s ease-in-out;
    }

    .verify-card h3 {
      font-weight: 700;
      text-align: center;
      margin-bottom: 20px;
    }

    .form-control {
      height: 45px;
      border-radius: 8px;
    }

    .btn-primary {
      height: 45px;
      border-radius: 8px;
      font-weight: 600;
      font-size: 1.05rem;
    }

    .back-link {
      margin-top: 15px;
      text-align: center;
    }

    .back-link a {
      text-decoration: none;
      font-weight: 600;
      color: #4e54c8;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to   { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>

<body>

  <div class="verify-card">

    <h3>Verify OTP</h3>

    <!-- FLASH MESSAGES -->
    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>

    <% if (success && success.length > 0) { %>
      <div class="alert alert-success text-center"><%= success %></div>
    <% } %>

    <!-- FORM -->
    <form action="/auth/verify" method="POST">

      <!-- Email from query -->
      <input type="hidden" name="email" value="<%= email %>">

      <div class="mb-3">
        <label class="form-label">Enter OTP</label>
        <input 
          type="text" 
          name="otp" 
          class="form-control" 
          required 
          maxlength="6"
          placeholder="6-digit OTP">
      </div>

      <div class="mb-3">
        <label class="form-label">New Password</label>
        <input 
          type="password" 
          name="password" 
          class="form-control" 
          required
          placeholder="Enter new password">
      </div>

      <button class="btn btn-primary w-100">Verify & Update Password</button>
    </form>

    <div class="back-link">
      <a href="/auth/login">← Back to Login</a>
    </div>

  </div>

</body>
</html>
