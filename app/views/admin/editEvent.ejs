<!doctype html>
<html lang="en">
<head>
  <title>Edit Event â€“ Admin</title>

  <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

  <style>
    body { background: #f4f6f9; }
    .form-card {
      background: #fff;
      padding: 30px;
      border-radius: 15px;
      margin-top: 40px;
      box-shadow: 0 6px 15px rgba(0,0,0,0.1);
    }
    h2 { font-weight: 700; text-align: center; margin-bottom: 25px; }
    .form-control, .form-select {
      height: 45px;
      border-radius: 8px;
    }
  </style>
</head>

<body>

<%- include('../partials/header') %>

<div class="container">
  <div class="form-card">

    <h2>Edit Event</h2>

    <% if(error && error.length) { %>
      <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>

    <% if(success && success.length) { %>
      <div class="alert alert-success text-center"><%= success %></div>
    <% } %>

    <form method="POST" action="/admin/events/edit/<%= event._id %>" enctype="multipart/form-data">

      <div class="mb-3">
        <label class="form-label">Title</label>
        <input name="title" class="form-control" value="<%= event.title %>" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea name="description" class="form-control" rows="4"><%= event.description %></textarea>
      </div>

      <div class="mb-3">
        <label class="form-label">Category</label>
        <select name="category" class="form-select">
          <% categories.forEach(cat => { %>
            <option value="<%= cat._id %>" <%= cat._id.toString() === event.category._id.toString() ? "selected" : "" %>>
              <%= cat.name %>
            </option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label">Location</label>
        <input name="location" class="form-control" value="<%= event.location %>" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Date</label>
        <input type="datetime-local" name="date"
               class="form-control"
               value="<%= event.date.toISOString().slice(0,16) %>"
               required>
      </div>

      <div class="mb-3">
        <label class="form-label">Price (INR)</label>
        <input type="number" name="price" class="form-control" value="<%= event.price %>" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Capacity</label>
        <input type="number" name="capacity" class="form-control" value="<%= event.capacity %>" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Current Image</label><br>
        <% if(event.image) { %>
          <img src="<%= event.image %>" style="width:180px;height:120px;object-fit:cover;border-radius:8px">
        <% } else { %>
          <p>No image uploaded.</p>
        <% } %>
      </div>

      <div class="mb-3">
        <label class="form-label">Upload New Image</label>
        <input type="file" name="image" accept="image/*" class="form-control">
      </div>

      <button class="btn btn-primary">Update Event</button>
      <a href="/admin/events" class="btn btn-secondary ms-2">Cancel</a>
    </form>

  </div>
</div>

<%- include('../partials/footer') %>
</body>
</html>
