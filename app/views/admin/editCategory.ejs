<!doctype html>
<html lang="en">
<head>
  <title>Edit Category â€“ Admin</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

  <style>
    body { background: #f4f6f9; }
    .form-card {
      background: #fff;
      padding: 30px;
      margin-top: 40px;
      border-radius: 15px;
      box-shadow: 0 6px 20px rgba(0,0,0,0.1);
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }
    h2 {
      font-weight: 700;
      margin-bottom: 25px;
      text-align: center;
    }
    .form-control { height: 45px; border-radius: 8px; }
    .btn { border-radius: 8px; font-weight: 600; }
  </style>
</head>

<body>

<%- include('../partials/header') %>

<div class="container">

  <div class="form-card">

    <h2>Edit Category</h2>

    <% if(error && error.length) { %>
      <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>

    <% if(success && success.length) { %>
      <div class="alert alert-success text-center"><%= success %></div>
    <% } %>

    <form action="/admin/categories/edit/<%= category._id %>" method="POST">

      <div class="mb-3">
        <label class="form-label">Category Name</label>
        <input name="name" class="form-control"
               value="<%= category.name %>" required>
      </div>

      <div class="d-flex gap-2">
        <button class="btn btn-primary w-50">Update</button>
        <a href="/admin/categories" class="btn btn-secondary w-50">Cancel</a>
      </div>

    </form>

  </div>
</div>

<%- include('../partials/footer') %>

</body>
</html>
