<!doctype html>
<html>
<head>
  <title>Book Event</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<%- include('../partials/header') %>
<div class="container py-4">
  <h3>Book Event: <%= event.title %></h3>

  <% if(error){ %><div class="alert alert-danger"><%= error %></div><% } %>
  <% if(success){ %><div class="alert alert-success"><%= success %></div><% } %>

  <form method="post" action="/booking/<%= event._id %>">
    <div class="mb-3">
      <label>Tickets:</label>
      <input type="number" name="tickets" class="form-control" value="1" min="1" max="<%= event.capacity %>">
    </div>
    <button class="btn btn-primary">Confirm Booking</button>
  </form>
</div>
<%- include('../partials/footer') %>
</body>
</html>
